<thead>
    <tr>
        <td class="sysinfo" colspan="{{ len .Columns }}">
            <div style="display: inline-grid; grid-template-columns: 33% 33% 34%; grid-template-rows: 50% 50%; width: 100%;">
                <div style="border: 1px black solid;">1</div>
                <div style="border: 1px black solid;">2</div>
                <div style="border: 1px black solid;">3</div>
                <div style="border: 1px black solid;">4</div>
                <div style="border: 1px black solid;">5</div>
                <div style="border: 1px black solid;"><button onClick="return saveConfig();">Save</button></div>
            </div>
        </td>
    </tr>
</thead>

<tbody>
    <tr id="columns" data-columns-num="{{ len .Columns }}">
    {{ range $ci, $column := .Columns }}

        <td
            class="column"
            id="{{ $ci }}"
            data-groups-num="{{ len $column.Groups }}">
            {{ range $gi, $group := $column.Groups }}

                <fieldset
                    class="group"
                    id="{{ $group.Id }}"
                    name="group"
                    data-group-name="{{ $group.Name }}"
                    data-sensors-num="{{ len $group.Sensors }}"
                    data-column="{{ $ci }}"
                    title="click to edit or move this group">

                    <legend onClick="editGroup('{{ $group.Id }}');">
                        {{ $group.Name }}
                    </legend>

                    {{ range $si, $sensor := $group.Sensors }}
                        <div id="json-{{ $sensor.Id }}" hidden>{{ $sensor.Json }}</div>
                        <div
                            class="sensor"
                            id="{{ $sensor.Id }}"
                            name="sensor"
                            data-sensor-name="{{ $sensor.Name }}"
                            data-group-id="{{ $group.Id }}"
                            title="click to edit this sensor"
                            onClick="editSensor('{{ $sensor.Id }}');">
                        </div>
                    {{ end }}

                </fieldset>

            {{ end }}

        </td> <!-- groups -->
    {{ end }}

    </tr> <!-- columns -->
</tbody>
