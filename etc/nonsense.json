{
    "server": {
        "listen" : ":12345",
        "resources" : "$PWD/resources"
    },

    "sensors" : [
        [
            {
                "name" : "Graphics",
                "type": "file",
                "group" : "FANS",
                "source" : "/sys/devices/platform/hp-wmi/hwmon/hwmon8/fan1_input",
                "units" : "rpm"
            },
            {
                "name" : "Processor",
                "type": "file",
                "group" : "FANS",
                "source" : "/sys/devices/platform/hp-wmi/hwmon/hwmon8/fan2_input",
                "units" : "rpm"
            },
            {
                "name" : "Temp",
                "type": "file",
                "source" : "/sys/devices/pci0000:00/0000:00:18.3/hwmon/hwmon7/temp1_input",
                "divider": 1000,
                "poll interval" : 2,
                "units": "&deg;C"
            },
            {
                "name" : "Temp2",
                "type": "file",
                "source" : "/tmp/e",
                "disabled" : true
            }
        ],
        [
            {
                "type": "file",
                "name" : "this one goes into second column"
            }
        ],
        [
            {
                "type": "file",
                "name" : "A THIRD COLUMN, WHEEE!"
            }
        ]

    ]
}
