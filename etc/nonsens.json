{
    "server": {
        "listen" : ":12345",
        "resources" : "$PWD/resources"
    },

    "NOTES": [
        "(o)name - visual name of this sensor, try auto (ex: AMD (temp1)) form *_label file if missed or use 'id' if failed",
        "(o)group - optional, visually group sensors",
        "(m)device - device to monitor, resolved symlink of /sys/class/hwmon/hwmon*/device",
        "(m)sensor - use this file prefix as data input, label, max, etc, ex /sys/class/hwmon/hwmon1/`sensor`_input",
        "(o)max - set this max value",
        "(o)min - set this min value",
        "(o)max auto - if true use file *_max value",
        "(o)min auto - if true use file *_mix value",
        "(o)units - value suffi to show, rpm, C, MB, etc",
        "(o)fractions - show values with fractions of this len, i.e. fractions  = 3 => 0.123i, default is 0 (int)",
        "(o)percents - calc and show percents gauge, bool",
        "(o)disable - ignore this sensor",
        "(o)poll interval - in seconds, default is 1 second"
    ],

    "sensors" : [
        [
            {
                "group" : "GPU",
                "name" : "temperature",
                "device" : "0000:09:00.0",
                "sensor" : "temp1",
